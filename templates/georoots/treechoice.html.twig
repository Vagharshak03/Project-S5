            font-size: 16px;
            margin-bottom: 40px;
        }

        .search-container {
            position: relative;
            width: 100%;
            max-width: 600px;
            margin-bottom: 30px;
        }

        .search-input {
            width: 100%;
            padding: 15px 25px;
            padding-right: 50px;
            background-color: #FFFFFF;
            border: 1px solid #E5E7EB;
            border-radius: 50px;
            color: #374151;
            font-size: 16px;
            outline: none;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
