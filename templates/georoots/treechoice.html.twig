    <script>
        // Trie Node
        class TrieNode {
            constructor() {
                this.children = {};
                this.isEndOfWord = false;
                this.fullWord = null;
            }
        }

        // Trie Class
        class Trie {
            constructor() {
                this.root = new TrieNode();
            }
            insert(word) {
                let currentNode = this.root;
                const cleanWord = word.toLowerCase();
                for (let char of cleanWord) {
                    if (!currentNode.children[char]) {
                        currentNode.children[char] = new TrieNode();
                    }
                    currentNode = currentNode.children[char];
                }
                currentNode.isEndOfWord = true;
                currentNode.fullWord = word;
            }
            search(prefix) {
                let currentNode = this.root;
                const cleanPrefix = prefix.toLowerCase();
                for (let char of cleanPrefix) {
                    if (!currentNode.children[char]) return [];
                    currentNode = currentNode.children[char];
                }
                let results = [];
                this.dfs(currentNode, results);
                return results;
            }
            dfs(node, results) {
                if (node.isEndOfWord) results.push(node.fullWord);
                for (let char in node.children) {
                    this.dfs(node.children[char], results);
                }
            }
        }

        const cropTrie = new Trie();
        const allButtons = document.querySelectorAll('.crop-btn');

        allButtons.forEach(btn => {
            cropTrie.insert(btn.innerText);
        });

        const searchInput = document.querySelector('.search-input');

        searchInput.addEventListener('input', (e) => {
            const val = e.target.value;
            if (val === "") {
                allButtons.forEach(btn => btn.style.display = "block");
            } else {
                const matches = cropTrie.search(val);
                const matchSet = new Set(matches);
                allButtons.forEach(btn => {
                    if (matchSet.has(btn.innerText)) {
                        btn.style.display = "block";
                    } else {
                        btn.style.display = "none";
                    }
                });
            }
        });

        const counterText = document.getElementById('counter-text');
        let count = 0;

        allButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                btn.classList.toggle('selected');
                if (btn.classList.contains('selected')) {
                    count++;
                } else {
                    count--;
                }
                counterText.textContent = count + " Trees Selected";
            });
        });
    </script>
