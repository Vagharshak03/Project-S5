        }

        .search-input:focus {
            border-color: #10B981;
            box-shadow: 0 4px 20px rgba(16, 185, 129, 0.15);
        }

        .search-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 20px;
            stroke: #9CA3AF;
            fill: none;
            stroke-width: 2;
            cursor: pointer;
        }

        .counter {
            font-size: 16px;
            font-weight: 700;
            margin-bottom: 25px;
            color: #10B981;
            background-color: #ECFDF5;
            padding: 8px 16px;
            border-radius: 20px;
        }

        .tags-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 12px;
            max-width: 1000px;
            padding: 0 20px;
        }

        .crop-btn {
